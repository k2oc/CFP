{
  "parser": "babel",
  "printWidth": 120, 
  "semi": true, 
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.json", ".eslintrc", ".tslintrc", ".prettierrc", ".tern-project"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": "*.{css,sass,scss,less,styl}",
      "options": {
        "parser": "css",
        "tabWidth": 2
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.pug",
      "options": {
        "parser": "@prettier/plugin-pug"
      }
    }
  ]
}